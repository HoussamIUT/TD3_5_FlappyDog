<UserControl x:Class="FlappyDog.UCChoixSkin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlappyDog"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Choix du personnage" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,78,0,0" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <RadioButton x:Name="rbSkin1" Click="rbSkin1_Click" Width="150" Height="150" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,47,350,0">
            <RadioButton.Content>
                <Image Source="/img/ChienAilesHautSansFond.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton x:Name="rbSkin2" Click="rbSkin2_Click" Width="150" Height="150" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30,50,0,0">
            <RadioButton.Content>
                <Image Source="/img/Chien2AilesHautSansFond.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton x:Name="rbSkin3" Click="rbSkin3_Click" Width="150" Height="150" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="450,50,0,0">
            <RadioButton.Content>
                <Image Source="/img/Chien3AilesHautSansFond.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>
        <Button x:Name="butDemarrer" Content="Démarrer" Margin="0,350,0,0" IsEnabled="False" Width="150" Height="50"/>

    </Grid>
</UserControl>
