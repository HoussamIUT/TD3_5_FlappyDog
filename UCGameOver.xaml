<UserControl x:Class="FlappyDog.UCGameOver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlappyDog"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Margin="120,-140,120,-140" Source="/img/cadreregles.png" Stretch="Fill"/>
        <Image Margin="254,167,254,239" Source="/img/gameover.png" Stretch="Fill"/>
        <Button x:Name="butRejouer" 
                    FontSize="24"
                    Margin="469,258,183,155"
                    Click="butRejouer_Click">
            <Button.Background>
                <ImageBrush ImageSource="/BoutonJouer_resized.png"/>
            </Button.Background>
        </Button>
        <Label x:Name="lblScoreFinal" 
                   Content="Score : 0" 
                   FontSize="26" 
                   FontWeight="Bold" 
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   Margin="0,225,0,167"/>
        <Button x:Name="butMenu" FontSize="24" Margin="212,263,500,160" Click="butRetour_Click">
            <Button.Background>
                <ImageBrush ImageSource="/BoutonRetour_final_resized-Photoroom.png"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
